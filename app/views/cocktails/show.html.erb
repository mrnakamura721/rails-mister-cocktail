<div class="card-trip">
  <img src="https://images.pexels.com/photos/1304541/pexels-photo-1304541.jpeg?cs=srgb&dl=fruit-juice-1304541.jpg&fm=jpg" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <div class="dose-info">
                <%= dose.description %>
                <%= dose.ingredient.name %>
              </div>
              <div class="delete-dose">
                <%= link_to dose_path(dose), class: 'delete-dose', method: :delete, data: { confirm: "Remove #{dose.description} #{dose.ingredient.name}?" } do%>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
   <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
</div>
