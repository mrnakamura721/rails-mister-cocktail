<div class="card-trip">
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 200, width: 300, crop: :fill %>
  <% else %>
    <img src="https://images.pexels.com/photos/338713/pexels-photo-338713.jpeg?cs=srgb&dl=alcoholic-bar-beverage-blur-338713.jpg&fm=jpg">
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <div class="dose-info">
                <%= dose.description %>
                <%= dose.ingredient.name %>
              </div>
              <div class="delete-dose">
                <%= link_to dose_path(dose), class: 'delete-dose', method: :delete, data: { confirm: "Remove #{dose.description} #{dose.ingredient.name}?" } do%>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
   <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>
